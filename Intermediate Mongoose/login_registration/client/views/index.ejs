<h1>Welcome to the main page</h1>

<h2>New Users register here:</h2>
<form action="/users" method="post">
    <h5>First Name:</h5> <input type="text" name="firstName">
    <h5>Last Name:</h5> <input type="text" name="lastName">
    <h5>Age:</h5> <input type="text" name="age">
    <h5>Email:</h5> <input type="text" name="email">
    <h5>Password:</h5> <input type="text" name="password">
    <!-- <h5>Confirm Password:</h5> <input type="text" name="passwordConf"> -->
    <input type="submit" value="Register!">

</form>
<h2>Returning users login</h2>

<form action="/login" method="post">
        <h5>Email:</h5> <input type="text" name="email">
        <h5>Password:</h5> <input type="text" name="password">
        <input type="submit" value="Login!">    
</form>